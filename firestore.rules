rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow caregivers (any authenticated user) to list all users.
    // Restrict get/write access to the specific user.
    match /users/{userId} {
      allow list: if request.auth != null;
      allow get, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Rules for user-specific subcollections
    match /users/{userId}/{collection}/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
